<!DOCTYPE html>
<html>
<head>
  <title>BblVis</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div id="wrapper" class="toggled">

  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand" style="background-color: #0f0f0f">
        <a href="#"> BBL Viewer </a>
      </li>
      <li>
        <form class="form-inline">
          <div class="form-group select">
            <label class="sidebar-text" for="bblSelect">Select BBL: </label>
          </div>
          <div class="form-group">

            <select class="form-control" id="bblSelect">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
        </form>
      </li>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12 content">
          <div id="graph-div">


          </div>
        </div>

        <%= yield %>

      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->

</div>
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
</body>
</html>
